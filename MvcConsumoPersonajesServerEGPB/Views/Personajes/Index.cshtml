@model IEnumerable<MvcConsumoPersonajesServerEGPB.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Personajes" class="btn btn-success">Nuevo Personaje</a>
</p>
<table class="table table-active">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePersonaje)
            </td>
            <td>
                <img src="@item.Imagen" style="width:150px; height:150px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Personajes" asp-route-id="@item.IdPersonaje" class="btn btn-dark">Detalles</a>
                    <a asp-action="DeletePersonaje" asp-controller="Personajes" asp-route-idpersonaje="@item.IdPersonaje" class="btn btn-danger">Eliminar</a>
                <a asp-action="Edit" asp-controller="Personajes" asp-route-idpersonaje="@item.IdPersonaje" class="btn btn-warning">Modificar</a>
            </td>
        </tr>
}
    </tbody>
</table>
